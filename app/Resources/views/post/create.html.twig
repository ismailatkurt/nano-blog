{% extends 'base.html.twig' %}

{% block content %}

    <div class="row">
        <div class="col-md-12">
            Create new Post
            <hr/>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <form role="form" action="{{ path("save-post") }}" method="post">

                <div class="form-group">
                    <label for="title">Title:</label>
                    <input type="text" class="form-control" id="title" name="title">
                </div>
                <div class="form-group">
                    <div class="fr-view">
                        <label for="content">Content:</label>
                        {{ tinymce_init() }}
                        <textarea class="tinymce" name="content"></textarea>
                    </div>
                </div>

                <div class="form-group">
                    <label for="translationOfPost">Translated from (Select post):</label>
                    <select id="translationOfPost" name="translationOfPost" class="form-control">
                        <option value="">None</option>
                        {% for post in posts %}
                            <option value="{{ post.id }}">{{ post.title }}</option>
                        {% endfor %}
                    </select>
                </div>

                <div class="form-group">
                    <hr/>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>

            </form>
        </div>
    </div>

{% endblock %}